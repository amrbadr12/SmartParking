<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wallet_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/wallet"
        android:contentDescription="wallet picture" />

    <TextView
        android:id="@+id/money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="37$"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/money_text"
        android:layout_margin="32dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/charge_wallet_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/atm"
                android:contentDescription="@string/charge_wallet" />

            <TextView
                android:id="@+id/charge_wallet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/charge_wallet_image"
                android:layout_toRightOf="@+id/charge_wallet_image"
                android:text="@string/charge_wallet"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.12"
            android:background="@color/colorWhite" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/redeem_points_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/cash"
                android:contentDescription="@string/redeem_points" />

            <TextView
                android:id="@+id/redeem_points_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/redeem_points_image"
                android:layout_toRightOf="@+id/redeem_points_image"
                android:text="@string/redeem_points"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.12"
            android:background="@color/colorWhite" />
    </LinearLayout>


</RelativeLayout>